# Qwen3-TTS 配置文件
# 请根据您的 Qwen3-TTS 设置填写以下参数

[Qwen3-TTS]
# Qwen3-TTS 模型目录路径 (必需)
# 如果未设置，将使用 engines/Qwen3-TTS-12Hz-0.6B-Base
# 可以设置为绝对路径或相对路径
model_dir = ./Qwen3-TTS-12Hz-0.6B-Base

# 默认音色关键词
# 用于在没有指定 --voice 参数时的默认音色选择
default_voice = 赵信

# 默认参考音频目录
# 存放音色参考音频文件的目录
assets_dir = ../assets

# 输出音频格式
# 支持: wav, mp3
output_format = wav

# 音频采样率
# 支持: 16000, 22050, 44100, 48000
sample_rate = 22050

# 音频质量设置 (0-100, 100为最高质量)
audio_quality = 90

# 是否启用缓存
# 缓存生成的音频以避免重复生成相同内容
enable_cache = true

# 缓存目录
cache_dir = ../cache/qwen3-tts

# 最大缓存文件数 (超过此数量将自动清理最旧的文件)
max_cache_files = 50

# 是否启用详细日志
# true: 显示详细处理信息
# false: 只显示关键信息
verbose = true

# 日志级别
# debug, info, warning, error
log_level = info

# 日志文件路径
log_file = ../logs/qwen3-tts.log

# 超时设置（秒）
# 模型加载和生成过程的超时时间
timeout = 300

# 内存优化设置
# 是否使用内存优化模式（适用于内存较小的设备）
memory_optimized = false

# 设备选择
# auto: 自动选择 (优先使用GPU)
# cuda: 强制使用GPU
# cpu: 强制使用CPU
device = auto

# CUDA设备ID (仅在使用GPU时有效)
# 0: 第一个GPU, 1: 第二个GPU, 以此类推
cuda_device_id = 0

# 批处理大小
# 影响生成速度和内存使用
batch_size = 1

# 是否启用进度条显示
show_progress = true

# 临时文件清理
# 是否在生成完成后清理临时文件
cleanup_temp_files = true

# 示例配置:
# [Qwen3-TTS]
# model_dir = /path/to/your/Qwen3-TTS-12Hz-0.6B-Base
# default_voice = 寒冰射手
# output_format = mp3
# sample_rate = 44100
# verbose = false
# device = cpu