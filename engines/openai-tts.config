# OpenAI TTS 配置文件
# 请根据您的 OpenAI API 设置填写以下参数

[OpenAI]
# OpenAI API 密钥 (必需)
# 您可以在 https://platform.openai.com/api-keys 获取
api_key = your_openai_api_key_here

# API 基础 URL (可选，默认为官方 API)
# 如果您使用代理或自定义端点，请在此处设置
base_url = https://api.openai.com/v1

# 使用的 TTS 模型 (可选，默认为 tts-1)
# 可用选项: tts-1, tts-1-hd
model = tts-1

# 默认语音 (可选，默认为 alloy)
# 可用选项: alloy, echo, fable, onyx, nova, shimmer
voice = alloy

# 默认语速 (可选，范围 0.25-4.0，默认为 1.0)
speed = 1.0

# 请求超时时间（秒）
timeout = 30

# 是否启用调试模式
debug = false

# 代理设置 (可选)
# 如果您需要通过代理访问 OpenAI API，请取消注释以下行
# proxy_url = http://your-proxy-server:port
# proxy_username = your_username (如果需要认证)
# proxy_password = your_password (如果需要认证)

# 音频格式设置
# 输出音频格式: mp3, opus, aac, flac
output_format = mp3

# MP3 音质设置 (仅对 mp3 格式有效)
# 可用选项: 64k, 128k, 256k (数字越大音质越好，文件也越大)
mp3_quality = 128k

# 缓存设置
# 是否缓存生成的音频文件以避免重复请求
enable_cache = true

# 缓存目录
cache_dir = ./cache/openai-tts

# 最大缓存文件数 (超过此数量将自动清理最旧的文件)
max_cache_files = 100

# 日志设置
log_level = info  # debug, info, warning, error
log_file = ./logs/openai-tts.log

# 示例配置:
# [OpenAI]
# api_key = sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# model = tts-1
# voice = nova
# speed = 1.2
# output_format = mp3
# mp3_quality = 192k